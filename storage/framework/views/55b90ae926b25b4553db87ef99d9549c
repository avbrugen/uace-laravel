                    <td><?php echo e($bidder->created_at); ?></td>
                    <td><a class="open_bidder_info" href="#" data-toggle="modal" data-target="#myModal" data-bidder-id="<?php echo e($bidder->id); ?>">Просмотреть</a></td>
